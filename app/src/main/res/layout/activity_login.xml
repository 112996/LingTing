<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/mood_main_bg"
    tools:context="yejiangxia.lingting.Mood_User.Login">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/mood_self_dialog_bg"
       android:layout_marginTop="110dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:textColorHint="#8e8782"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="40dp"
            android:paddingBottom="5dp"
            android:background="@null"
            android:id="@+id/Tel_num"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/mood_long_line"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/Tel_num"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_below="@+id/Tel_num"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:textColorHint="#8e8782"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:paddingBottom="5dp"
                android:id="@+id/ver_code"
                android:background="@null" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:layout_marginLeft="50dp"
                android:id="@+id/get_ver_code"
                android:textSize="22dp"
                android:textColor="#c9cfd6"
                android:background="#00000000"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/mood_long_line"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/linearLayout"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/linearLayout"
    android:id="@+id/linearLayout1"
    android:layout_marginTop="50dp"
    android:layout_centerHorizontal="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mood_btn_yes"
            android:background="@drawable/stop_shape"
            android:text="确认"
           />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进入"
            android:layout_marginLeft="20dp"
            android:id="@+id/mood_btn_in"
            android:background="@drawable/stop_shape"/>
</LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他方式登录"
            android:id="@+id/other"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="25dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/mood_short_line"
            android:layout_below="@id/other"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/other"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:background="@mipmap/mood_qq"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:background="@mipmap/mood_weibo"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="20dp"
                android:background="@mipmap/mood_wechat"/>
        </LinearLayout>



    </RelativeLayout>


</RelativeLayout>
