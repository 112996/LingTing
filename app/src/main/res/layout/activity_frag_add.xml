<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yejiangxia.lingting.Fragment.Frag_add">

   <RelativeLayout

       android:layout_width="330dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:layout_centerHorizontal="true"
       android:background="@mipmap/add_bg"
       >
       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:hint="冒个泡泡......"
           android:id="@+id/add_text"
           android:layout_marginLeft="20dp"
           android:background="@null"
           android:layout_marginTop="20dp"
           android:textColorHint="#cccccc"/>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@mipmap/add_pic"
           android:layout_below="@+id/add_text"
           android:id="@+id/add_picture"
           android:layout_marginTop="100dp"
           android:layout_marginLeft="20dp"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="添加图片"
           android:id="@+id/tv"
           android:layout_alignBottom="@+id/add_picture"
           android:layout_toRightOf="@+id/add_picture"
           android:layout_toEndOf="@+id/add_picture"
           android:layout_marginLeft="13dp"
           android:textColor="#cccccc"
           android:layout_marginStart="13dp" />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="#00000000"
           android:id="@+id/add_publish"
           android:layout_alignBottom="@+id/tv"
           android:layout_toRightOf="@+id/tv"
           android:text="发表"
           android:textSize="20dp"
           android:textColor="#9facbb"
           android:layout_toEndOf="@+id/tv"
           android:layout_marginLeft="100dp"
           android:layout_marginStart="100dp"/>

   </RelativeLayout>



</RelativeLayout>
