<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yejiangxia.lingting.Fragment.Frag_circle">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/add_bg"
        android:layout_below="@+id/time"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">

        <yejiangxia.lingting.Mood_User.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/id"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="80dp"
            android:textColor="#9facbb"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9facbb"
            android:id="@+id/text"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/id"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:id="@+id/pic"
            android:layout_below="@+id/text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pic"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="200dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@mipmap/me_like"/>
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:background="@mipmap/me_say"/>

        </LinearLayout>



    </RelativeLayout>




</RelativeLayout>
