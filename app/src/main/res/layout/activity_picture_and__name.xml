<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bdd6f6"
    tools:context="yejiangxia.lingting.Mood_User.Picture_and_Name">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="#a7c9f3"
        android:layout_gravity="center"
        android:text="编辑个人信息"
        android:id="@+id/tv"
        android:textColor="#ffffff"
        android:textSize="30dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line"
        android:layout_below="@+id/tv"
        android:layout_marginTop="1dp"
        android:background="#1C86EE"/>


    <yejiangxia.lingting.Mood_User.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/head_portrait"
        android:id="@+id/head_portrait"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/line"
        android:layout_marginTop="50dp"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/add"
        android:layout_alignBottom="@+id/head_portrait"
        android:layout_alignRight="@+id/head_portrait"
        android:layout_alignEnd="@+id/head_portrait" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_centerInParent="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rela"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称："
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:id="@+id/nicheng"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:id="@+id/Name"
            android:layout_toRightOf="@+id/nicheng"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_line"
            android:layout_below="@+id/Name"
            android:layout_marginLeft="43dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rela1"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:id="@+id/Tel"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:background="#00000000"
            android:id="@+id/Tel_num"
            android:layout_toRightOf="@+id/Tel" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_line"
            android:layout_below="@+id/Tel_num"
            android:layout_marginLeft="58dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rela2"
        android:layout_marginTop="25dp"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预产时间："
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:id="@+id/expc_time"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:id="@+id/Expect_time"
            android:layout_toRightOf="@+id/expc_time"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_line"
            android:layout_below="@+id/Expect_time"
            android:layout_marginLeft="74dp"/>
    </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/submit"
        android:text="确认"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="242.1dp"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:id="@+id/submit"

        />

</RelativeLayout>
